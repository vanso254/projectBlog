<% if (article) { %>
<div class="card">
  <div class="card-header text-center">
    <h5 class="card-title"><%= article.title %></h5>
    <small class="small text-muted"><%= article.datePosted.toDateString() %>
      <span class="px-2">-</span>
      <a href="#" class="text-muted">32 Comments</a>
    </small>
  </div>
  <div class="card-body">
    <div class="blog-media">
      <img src="./uploads/<%= article.imageName %>" alt="" class="w-100" />
      <a href="#" class="badge badge-primary"><%= article.tag %></a>
    </div>
    <p class="my-3">
      <%= article.description %>
    </p>
  </div>

  <div class="card-footer d-flex justify-content-between align-items-center flex-basis-0">
    <button class="btn btn-primary circle-35 mr-4">
      <i class="ti-back-right"></i>
    </button>
    <a href="single-post.html" class="btn btn-outline-dark btn-sm">READ MORE</a>
    <a href="#" class="text-dark small text-muted">By : Joe Mitchell</a>
  </div>
</div>
<% } else { %>

<div class="alert alert-warning alert-dismissible fade show">
  <strong>Warning!</strong>There is No Article.
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>